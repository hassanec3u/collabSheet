<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feuille de Calcul</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        th, td {
            min-width: 100px;
        }
    </style>
</head>
<body>
<%- include('partials/navbar') %>
<div class="container-fluid mt-5">
    <h1>Feuille de Calcul</h1>
    <button class="btn btn-primary mb-3" id="saveSheet">Enregistrer la feuille</button>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th></th>
            <% for (let col = 0; col < 10; col++) { %>
                <th><%= String.fromCharCode(65 + col) %></th>
            <% } %>
        </tr>
        </thead>
        <tbody>
        <% for (let row = 0; row < 10; row++) { %>
            <tr>
                <th><%= row + 1 %></th>
                <% for (let col = 0; col < 26; col++) { %>
                    <td contenteditable="true">
                        <%= sheet.data && sheet.data[row] && sheet.data[row][col] ? sheet.data[row][col] : '' %>
                    </td>
                <% } %>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    document.getElementById('saveSheet').addEventListener('click', () => {
        const table = document.querySelector('table');
        const data = [];
        for (let row = 1; row < table.rows.length; row++) {
            const rowData = [];
            for (let col = 1; col < table.rows[row].cells.length; col++) {
                rowData.push(table.rows[row].cells[col].innerText);
            }
            data.push(rowData);
        }
        fetch('/sheet/save', {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({sheetId: '<%= sheet._id %>', data: data})
        })
            .then(response => response.text())
            .then(data => {
                alert(data);
            });
    });
</script>
</body>
</html>
</body>
</html>